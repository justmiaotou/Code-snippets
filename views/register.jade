!!! 5
html
    head
        meta(charset='utf-8')
        title #{title}
        link(rel='stylesheet', href='/css/reset.css')
        link(rel='stylesheet', href='/css/common.css')
        link(rel='stylesheet', href='/css/single-form.css')
    body
        section.wrapper
            header.main-hd
                a.name(href='/') Code Snippet
            section.content
                .main-bd
                    form#main-form(action="/login", method="post")
                        ul
                            li
                                label.ib(for="username") 用户名
                                input#username.txt(name="username", type="text", placeholder="/\w[\w._-]{4,}\w/", tabindex="1")
                            li
                                label.ib(for="email") 邮&nbsp;&nbsp;&nbsp;箱
                                input#email.txt(name="email", type="email", placeholder="name@example.com", tabindex="2")
                            li
                                label.ib(for="passwd") 密&nbsp;&nbsp;&nbsp;码
                                input#passwd.txt(name="password", type="password", tabindex="3")
                            li
                                label.ib(for="passwd-confirm") 密码确认
                                input#passwd-confirm.txt(type="password", tabindex="4")
                            .seperate
                            input.submit(type="button", value="注&nbsp;册", tabindex="5")
